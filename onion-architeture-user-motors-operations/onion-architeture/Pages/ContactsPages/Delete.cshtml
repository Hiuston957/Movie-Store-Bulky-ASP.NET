<h1>Skasuj użytkownika</h1>
<form asp-controller="Contact" asp-action="Delete" method="post">
    <label asp-for="Name"></label>
    <input class="form-control" asp-for="Name" readonly />
    <span class="text-danger" asp-validation-for="Name"></span>

    <label asp-for="Email"></label>
    <input class="form-control" asp-for="Email" readonly />
    <span class="text-danger" asp-validation-for="Email"></span>

    <label asp-for="Phone"></label>
    <input class="form-control" asp-for="Phone" readonly />
    <span class="text-danger" asp-validation-for="Phone"></span>

    <label asp-for="Birth"></label>
    <input class="form-control" asp-for="Birth" readonly />
    <span class="text-danger" asp-validation-for="Birth"></span>
